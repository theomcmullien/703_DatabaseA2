@model Assignment2.Models.Room

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";

    Hotel? hotel = ViewData["Hotel"] as Hotel;
}

<h3 class="mb-5 text-light">Are you sure?</h3>
<div class="text-light">
    <dl style="font-size: 18px"  class="row">
        <dt class = "col-sm-2">Daily Cost</dt>
        <dd class = "col-sm-10">@string.Format("${0:0.00}", Model.RoomDailyCost)</dd>

        <dt class = "col-sm-2">Room Type</dt>
        <dd class = "col-sm-10">@Model.RoomType</dd>

        <dt class = "col-sm-2">Room Status</dt>
        <dd class = "col-sm-10">@Model.RoomStatus</dd>

        <dt class = "col-sm-2">Hotel</dt>
        @if (hotel != null)
        {
            <dd class = "col-sm-10">@hotel.HotelName</dd>
        }
    </dl>
    
    <form class="mb-5" asp-action="Delete">
        <input type="hidden" asp-for="RoomID" />
        <input type="submit" value="Remove" class="w-25 btn btn-danger" />
    </form>
    <a class="w-100 button-site" style="text-decoration: none; color: white" asp-action="Index">Back</a>
</div>
